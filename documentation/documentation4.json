              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                },
                "required": [
                  "email", 
                  "password"
                ]
              },
              "example": {
                "email": "admin01@gmail.com",
                "password": "Admin,01"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "You have successfully logged in",
